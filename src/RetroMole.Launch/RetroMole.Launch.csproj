<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.0-preview1" />
    <PackageReference Include="Serilog" Version="2.11.0-dev-01380" />
    <PackageReference Include="Serilog.Sinks.Console" Version="4.0.2-dev-00890" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.1-dev-00947" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\RetroMole.Gui\RetroMole.Gui.csproj" />
    <ProjectReference Include="..\RetroMole.Shared\RetroMole.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Renderers\MonogameXNA-Renderer\src\MonogameXNA-Renderer.csproj">
      <DestinationSubDirectory>Renderers\</DestinationSubDirectory>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\GameModules\SMB1-SMB2LL-GameModule\src\SMB1-SMB2LL-GameModule\SMB1-SMB2LL-GameModule.csproj">
      <DestinationSubDirectory>GameModules\</DestinationSubDirectory>
    </ProjectReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Plugins\LibretroEmu-Plugin\src\LibretroEmu-Plugin.csproj">
      <DestinationSubDirectory>Plugins\</DestinationSubDirectory>
    </ProjectReference>
  </ItemGroup>
  
  <ItemGroup>
    <None Include="..\Assets\**" CopyToOutputDirectory="PreserveNewest" LinkBase="Assets\" visible="false" />
  </ItemGroup>

  <ItemGroup>
    <!-- Asar CMake-out project is usually only avaliable on Windows-->
    <ProjectReference Include="..\Asar\CMake-Out\asar\asar.vcxproj" Condition="'$(OS)' == 'Windows_NT'">
      <ReferenceOutputAssembly>false</ReferenceOutputAssembly>
      <OutputItemType>Content</OutputItemType>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </ProjectReference>
    
    <!--TODO: Linux Alternative-->
    <!--TODO: OSX Alternative-->
  </ItemGroup>
</Project>
